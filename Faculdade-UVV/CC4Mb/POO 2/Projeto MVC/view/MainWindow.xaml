<Window x:Class="Viniciusas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viniciusas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Label1" Content="Area de atuação:" HorizontalAlignment="Left" Margin="42,57,0,0" VerticalAlignment="Top" Width="146" Height="33" FontSize="18"/>
        <TextBox x:Name="area" HorizontalAlignment="Left" Margin="242,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="35" FontSize="16"/>
        <Label Content="Escreva sua idea aqui" HorizontalAlignment="Left" Margin="42,132,0,0" VerticalAlignment="Top" Width="269" FontSize="18"/>
        <TextBox x:Name="ideia" HorizontalAlignment="Left" Margin="54,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="699" Height="147" TextChanged="ideia_TextChanged"/>
        <Label Content="Custo:" HorizontalAlignment="Left" Margin="54,365,0,0" VerticalAlignment="Top" Width="61"/>
        <TextBox x:Name="preco" HorizontalAlignment="Left" Margin="115,373,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="butao" Content="Cadastrar" HorizontalAlignment="Left" Margin="602,373,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click"/>

    </Grid>
</Window>
